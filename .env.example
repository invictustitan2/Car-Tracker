# UPS Package Car Tracker - Environment Variables Template
# Copy this file to .env and fill in the values

# ================================
# FRONTEND CONFIGURATION
# ================================

# API URL - Cloudflare Worker endpoint
VITE_API_URL=https://ups-tracker-api.invictustitan2.workers.dev

# API Key for authentication
# This should match the API_SECRET_KEY set in Cloudflare Worker secrets
VITE_API_KEY=your-api-key-here

# Enable WebSocket sync (true/false)
VITE_ENABLE_SYNC=true

# Enable Unload Module (true/false) - Door Board feature
# Default: false (feature hidden when not enabled)
VITE_ENABLE_UNLOAD=false

# ================================
# BACKEND SECURITY - REQUIRED
# ================================

# API Secret Key - Used for API authentication
# Generate a strong random key: openssl rand -base64 32
API_SECRET_KEY=your-secret-key-here

# Allowed Origins for CORS (comma-separated)
# Development: http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173

# Environment (development or production)
ENVIRONMENT=development

# Enable Unload Module in Worker API (true/false)
# When false, /api/unload/* returns 404
ENABLE_UNLOAD_MODULE=false

# ================================
# CLOUDFLARE CONFIGURATION
# ================================

# Cloudflare Account ID (from Cloudflare dashboard)
CLOUDFLARE_ACCOUNT_ID=your-account-id

# Cloudflare API Token (from Cloudflare dashboard)
CLOUDFLARE_API_TOKEN=your-api-token

# D1 Database ID (from wrangler d1 list)
D1_DATABASE_ID=your-database-id

# KV Namespace ID for rate limiting (from wrangler kv:namespace list)
RATE_LIMIT_KV_ID=your-kv-namespace-id

# ================================
# PUSH NOTIFICATIONS
# ================================

# VAPID Keys for Web Push Notifications
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# ================================
# OPTIONAL CONFIGURATION
# ================================

# Rate Limit (requests per minute per IP per endpoint)
RATE_LIMIT_PER_MINUTE=100

# Maximum request body size (bytes)
MAX_REQUEST_BODY_SIZE=102400

# WebSocket connection timeout (milliseconds)
WS_CONNECTION_TIMEOUT=300000
