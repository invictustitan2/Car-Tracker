{
  "name": "ups-tracker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "preinstall": "node -e \"const [major, minor] = process.versions.node.split('.').map(Number); if (major < 20 || (major === 20 && minor < 19)) { console.error('Node 20.19+ required'); process.exit(1); }\"",
    "dev": "vite",
    "dev:worker": "wrangler dev workers/api.js --local --persist-to .wrangler/state",
    "dev:all": "concurrently \"npm run dev:worker\" \"vite\"",
    "build": "vite build",
    "lint": "eslint .",
    "release": "npm run lint && npm run test -- --run && npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --grep-invert @smoke",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:prod": "TEST_ENV=production BASE_URL=https://tracker.aperion.cc playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "preview:local": "npm run build && npm run preview",
    "deploy": "npm run build && wrangler pages deploy dist --project-name ups-tracker",
    "deploy:dirty": "npm run build && wrangler pages deploy dist --project-name ups-tracker --commit-dirty=true",
    "deploy:worker": "cd workers && npx wrangler deploy",
    "setup:d1": "bash scripts/setup-d1.sh",
    "db:query:dev": "wrangler d1 execute ups-tracker-db-dev --local",
    "db:query:prod": "wrangler d1 execute ups-tracker-db --remote",
    "db:migrate": "wrangler d1 execute ups-tracker-db --file=./migrations/0001_initial_schema.sql --remote",
    "db:setup:local": "bash scripts/setup-local-db.sh"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "lucide-react": "^0.554.0",
    "node-fetch": "^3.3.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.22",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "mock-socket": "^9.3.1",
    "msw": "^2.12.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4",
    "vitest": "^2.1.5",
    "vitest-axe": "^0.1.0",
    "wrangler": "^4.50.0"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
